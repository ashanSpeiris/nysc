# Database Configuration
# PostgreSQL connection string for your Ubuntu server
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL="postgresql://postgres:password@localhost:5432/volunteer_portal?schema=public"

# Redis Configuration
# Redis connection string for caching and rate limiting
REDIS_URL="redis://localhost:6379"

# NextAuth Configuration
# Generate a random secret: openssl rand -base64 32
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production"
NEXTAUTH_URL="http://localhost:3000"

# Admin Configuration
# Default admin credentials (will be created on first run)
DEFAULT_ADMIN_EMAIL="admin@nysc.lk"
DEFAULT_ADMIN_PASSWORD="admin123"
DEFAULT_ADMIN_NAME="NYSC Administrator"

# Application Configuration
NODE_ENV="development"
# Change to production on Ubuntu server
# NODE_ENV="production"

# Rate Limiting (requests per minute)
RATE_LIMIT_MAX=10

# Security
# Set to true in production for SSL
SECURE_COOKIES="false"
